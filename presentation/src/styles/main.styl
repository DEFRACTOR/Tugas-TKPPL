/* C) Percentage Calculator */
div#percentage
	margin : 0px auto
	width : 420px
	height : 285px

div#percentage div
	width : 300px
	height : 35px
	text-align : left
	line-height : 35px
	float : left

div#percentage .reset 
	width : 100px
	height : 30px
	margin : 0px 10px
	background : linear-gradient(#4080C0, #90C0F0)
	border-radius : 5px
	box-shadow : 0px 5px #68A0D8 
