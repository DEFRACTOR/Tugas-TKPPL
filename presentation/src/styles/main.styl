/* A) Default Calculator */
.bespoke-parent
    background-image : url("../images/Web_Background.jpg")
    background-repeat : no-repeat
    background-position : center 
    background-attachment : fixed
    background-size : 100%

.bespoke-slide 
	background-image :url("../images/Dark_Purple_Metal.jpg")

.bespoke-active
	color : white

div#default
	background : #202060
	border-radius : 10px
	margin : 0px auto
	width : 320px
	height : 260px
	box-shadow : 0px 5px #101030, 0px 10px 15px rgba(0, 0, 0, 0.2);

div#result
	overflow: hidden;
	color : black
	background : #E0FFE0
	border-radius : 5px
	margin : 20px 20px 10px
	padding : 0px 10px
	width : 280px
	height : 40px
	font-size : 36px
	text-align : right
	direction = rtl
	box-shadow: inset 0px 5px #B0CCB0;

div#command
	background : transparent
	color : black
	font-size : 24px
	float : right
	text-align : right
	direction = rtl

div#keys
	width : 320px
	height : 145px
	padding : 0px 10px 15px

.key
	position: relative;
	float : left
	margin : 5px 10px
	width : 55px
	height : 25px
	color : white
	border-radius : 5px
	font : 12px
	line-height : 25px
	text-align : center
	top : 0px
	transition: all 0.2s ease;
	
.bWlarge
	width : 130px

.bBlue
	background : #0080ff
	box-shadow : 0px 5px #004080

.bCyan
	background : #008080
	box-shadow : 0px 5px #004040

.bGray 
	background : #808080
	box-shadow : 0px 5px #404040

.bRed
	background : #ff0000
	box-shadow : 0px 5px #800000

.bBlue:hover
	background : #00c0ff
	box-shadow : 0px 5px #0060c0

.bCyan:hover
	background : #00C0C0
	box-shadow : 0px 5px #006060

.bGray:hover
	background : #C0C0C0
	box-shadow : 0px 5px #606060

.bRed:hover
	background : #ff4040
	box-shadow : 0px 5px #C03030

.key:hover
	cursor : pointer

.key:active
	box-shadow : 0px 0px
	top : 5px
