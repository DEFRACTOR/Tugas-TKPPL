	background : linear-gradient(#60A0E0, #90E0F0);
	box-shadow : 0px 5px #78C0E8 
	text-shadow : 0px 0px 5px #ffffff
	cursor : pointer

div#percentage .reset:active
	box-shadow : 0px 0px
	top : 5px
	transition: all 0.25s ease;

div#percentage .board
	float : left
	width : 420px
	height : 30px
	margin : 5px 0px
	padding : 0px 10px
	line-height : 30px
	text-align : left

div#percentage .info
	float : left
	width : 420px
	height : 30px
	margin-bottom : 5px
	padding : 0px 10px
	line-height : 30px
	text-align : left

div#percentage .board input
	width : 60px
	height : 20px
	direction : rtl
	background : linear-gradient(#60B0D0,#80D0F0)
	
